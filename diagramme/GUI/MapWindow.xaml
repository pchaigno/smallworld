<Window x:Class="GUI.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MapWindow" Height="350" Width="536" Loaded="Window_Loaded">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <StackPanel>
                <Label Name="infoLabel"/>
                <TextBlock Margin="10" FontSize="20" Grid.Column="0" Grid.Row="8" Name="playerD1"></TextBlock>
                <TextBlock Margin="10" FontSize="20" Grid.Column="0" Grid.Row="8" Name="playerD2"></TextBlock>
                <Button HorizontalAlignment="Right" Content="Fin du tour" />
            </StackPanel>
        </Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <Grid Background="Azure">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Name="mapGrid">

                </Grid>
            </Grid>
        </ScrollViewer >
        

    </DockPanel>
</Window>
