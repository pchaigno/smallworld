<Window x:Class="GUI.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MapWindow" Height="600" Width="536" Loaded="Window_Loaded">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <StackPanel>
                <Label Name="infoLabel"/>

                <TextBlock Margin="10" FontSize="16" Foreground="Red" Name="lastMove" HorizontalAlignment="Center"></TextBlock>
                <TextBlock Margin="10" FontSize="14" Name="roundD"></TextBlock>
                <TextBlock Margin="10" FontSize="14" Name="currentD"></TextBlock>
                <TextBlock Margin="10" FontSize="14" Name="playerD1"></TextBlock>
                <TextBlock Margin="10" FontSize="14" Name="playerD2"></TextBlock>
                <Button HorizontalAlignment="Right" Click="onClickEndRound" Content="End Round" />
            </StackPanel>
        </Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <Grid Background="Azure">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Name="mapGrid">

                </Grid>
            </Grid>
        </ScrollViewer >
        

    </DockPanel>
</Window>
