<Window x:Class="WpfMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="536" Loaded="Window_Loaded">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <StackPanel>
                <Label Name="infoLabel"/>
            </StackPanel>
            <Button HorizontalAlignment="Right" Content="Fin du tour" />
        </Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <Grid Background="Azure">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Name="mapGrid">

                </Grid>
            </Grid>
        </ScrollViewer >
        

    </DockPanel>
</Window>
